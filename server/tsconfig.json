{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "*": ["types/*"] },
		"target": "es6",
		"lib": ["es6"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strictNullChecks": true,
		"outDir": "out",
		"rootDir": "src",
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
